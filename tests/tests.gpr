with "config/tests_config.gpr";
with "../opencv_ada.gpr"; -- To reference all library functions

project Tests is
   for Languages use ("Ada", "C");
   for Source_Dirs use ("src/", "src/external/", "config/", "reference-qoi/", "stb/");
   for Object_Dir use "obj/" & Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("tests.adb");

   for Excluded_Source_Files use ("qoibench.c", "qoiconv.c", "qoifuzz.c");

   package Compiler is
      for Default_Switches ("Ada") use Tests_Config.Ada_Compiler_Switches & ("-gnat2022");
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Tests;
